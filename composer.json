{
    "name": "bandama/app-lite",
    "description": "Bandama Application Skeleton with Monolog",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "require-dev": {
        "php": ">=5.4"
    },
    "require": {
        "php": ">=5.4",
        "bandama/framework": "^1.0",
        "monolog/monolog": "^1.22"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": ["app/", "src/"],
            "App\\Controller\\": "src/controllers",
            "App\\Model\\": "src/models",
            "App\\Service\\": "src/services"
        }
    }
}